{
  "name": "github-concierge",
  "version": "1.0.0",
  "description": "Practical UI to navigate at your repositories organized in folders",
  "main": "index.ts",
  "scripts": {
    "start": "npx nodemon",
    "lint": "eslint . --ext .ts,tsx",
    "precommit": "npm run lint",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cover": "jest --coverage",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luizdesign/github-concierge.git"
  },
  "keywords": [
    "github",
    "concierge",
    "UI",
    "organize",
    "repositories"
  ],
  "author": "Luiz Kota",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luizdesign/github-concierge/issues"
  },
  "homepage": "https://github.com/luizdesign/github-concierge#readme",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "dependencies": {
    "@testing-library/react": "^9.3.0",
    "express": "^4.17.1",
    "express-react-views": "^0.11.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.6.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "@types/react": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "nodemonConfig": {
    "ext": "ts,tsx",
    "exec": "ts-node ."
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
